<p id="notice"><%= notice %></p>

<h1>Todos</h1>

  <body>
    <% @todos.each do |todo| %>
      <ul>
        <h3><%= todo.title %></h3>
        Category: <%= todo.category.name %><br>
        <%= todo.time.strftime("%A, %B %e, %y at %I:%M %p") %><br>
        Done/Attended: <%= todo.attended %><br>
        <%= link_to 'Show', todo %>
        <%= link_to 'Edit', edit_todo_path(todo) %>
        <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
      </ul>
    <% end %>
  </body>

<br>

<%= link_to 'New Todo', new_todo_path %>
